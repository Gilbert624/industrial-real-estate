# ==================== 生产环境配置 ====================

# Anthropic API密钥（生产环境）
ANTHROPIC_API_KEY=your_production_api_key_here

# 数据库配置
DATABASE_URL=sqlite:///production_data.db
# 或使用PostgreSQL（推荐）:
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# 应用配置
APP_ENV=production
DEBUG=False
LOG_LEVEL=INFO

# 安全配置
SECRET_KEY=your_secret_key_here_min_32_chars

# 备份配置
BACKUP_ENABLED=True
BACKUP_PATH=/backups
BACKUP_SCHEDULE=daily

# 监控配置（可选）
SENTRY_DSN=your_sentry_dsn_if_using

# 邮件配置（可选，用于报告发送）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# 文件存储配置
MAX_UPLOAD_SIZE=200
ALLOWED_FILE_TYPES=pdf,xlsx,docx,jpg,png

# 性能配置
CACHE_ENABLED=True
CACHE_TTL=3600

# 功能开关
ENABLE_AI_ASSISTANT=True
ENABLE_DUE_DILIGENCE=True
AI_COST_LIMIT_MONTHLY=50.00
